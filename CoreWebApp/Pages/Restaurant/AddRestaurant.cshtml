@page
@model CoreWebApp.AddRestaurantModel
@{
    ViewData["Title"] = "AddRestaurant";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <form method="post">
        <div class="form-group">
            <label asp-for="Restaurant.id"></label>
            <input asp-for="Restaurant.id" type="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="Restaurant.Name"></label>
            <input asp-for="Restaurant.Name" class="form-control" />
            <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
            @* No need to specify any error msg as it will be displayed automat by asp-validation-for *@
        </div>
        <div class="form-group">
            <label asp-for="Restaurant.Location"></label>
            <input asp-for="Restaurant.Location" class="form-control" />
            <span class="text-danger" asp-validation-for="Restaurant.Location"></span>
        </div>
        <div class="form-group">
            <label asp-for="Restaurant.PureVeg"></label>
            <input asp-for="Restaurant.PureVeg" class="form-control" />
            <span class="text-danger" asp-validation-for="Restaurant.PureVeg"></span>
        </div>
        <div class="form-group">
            <label asp-for="Restaurant.Cuisine"></label>
            <select asp-for="Restaurant.Cuisine" asp-items="Model.Cuisines"
                    class="form-control">
            </select>
            @* asp-items data can come from anywhere so need to specify "Model.Property"
            instead of "Property"*@
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

